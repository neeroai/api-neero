{
  "defaultMode": "acceptEdits",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash(git add:*)",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-commit-verify.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(tsx:*)",
      "Bash(pip install:*)",
      "Bash(python:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(curl -X GET:*)",
      "Bash(curl -X POST:*)",
      "Bash(psql:*)",
      "Bash(pg_dump:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "Bash(tail:*)",
      "Bash(head:*)",
      "Bash(wc:*)",
      "Bash(jq:*)",
      "Bash(prettier:*)",
      "Bash(eslint:*)",
      "Bash(tsc:*)",
      "Read(**)",
      "Write(**/*.ts)",
      "Write(**/*.tsx)",
      "Write(**/*.js)",
      "Write(**/*.jsx)",
      "Write(**/*.json)",
      "Write(**/*.md)",
      "Write(**/*.css)",
      "Write(**/*.sql)",
      "Write(**/*.prisma)",
      "Edit(**)",
      "MultiEdit(**)",
      "Task(*)",
      "Glob(*)",
      "Grep(*)",
      "LS(*)",
      "Search(*)",
      "WebFetch(domain:api.openai.com)",
      "WebFetch(domain:api.bird.com)",
      "WebFetch(domain:graph.facebook.com)",
      "WebFetch(domain:*.vercel.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:nextjs.org)",
      "WebFetch(domain:react.dev)",
      "WebFetch(domain:tailwindcss.com)",
      "WebFetch(domain:*.github.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:npmjs.com)",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf:*)",
      "Bash(sudo passwd:*)",
      "Bash(sudo useradd:*)",
      "Bash(sudo userdel:*)",
      "Bash(sudo su:*)",
      "Bash(su:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(halt:*)",
      "Bash(poweroff:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(nc -l:*)",
      "Bash(ncat -l:*)",
      "Bash(ssh:*)",
      "Bash(chmod 777:*)",
      "Bash(chmod -R 777:*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/*secret*)",
      "Read(**/*password*)",
      "Read(**/*credential*)",
      "Read(**/.ssh/**)",
      "Read(**/.aws/**)",
      "Read(**/.gcp/**)",
      "Write(**/.env)",
      "Write(**/.env.*)",
      "Write(**/secrets/**)",
      "Write(**/.ssh/**)"
    ]
  },
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "cleanupPeriodDays": 7
}
